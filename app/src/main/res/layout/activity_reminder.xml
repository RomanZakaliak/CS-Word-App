<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <TimePicker
        android:id="@+id/remind_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/remind_title_wrapper"/>

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/remind_title_wrapper"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/remind_time_picker"
       app:layout_constraintBottom_toTopOf="@+id/remind_message_wrapper"
       android:hint="@string/remind_title_hint">
       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/remind_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:maxLength="40"/>
   </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/remind_message_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remind_title_wrapper"
        app:layout_constraintBottom_toTopOf="@+id/remind_switch"
        android:hint="@string/remind_message_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/remind_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:maxLines="3"
            android:maxLength="200"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Switch
        android:id="@+id/remind_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remind_message_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>