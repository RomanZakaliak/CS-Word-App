<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowWordFragment"
    android:orientation="vertical"
    android:padding="10dp">
    
    <TextView
        android:id="@+id/word_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/word_detail"/>
    <TextView
        android:id="@+id/word_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="20dp"
        android:text="Placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_detail_label"
        app:layout_constraintBottom_toTopOf="@+id/translation_detail_label"/>

    <TextView
        android:id="@+id/translation_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_translation"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_detail"
        app:layout_constraintBottom_toTopOf="@+id/translation_detail"/>

    <TextView
        android:id="@+id/translation_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Placeholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation_detail_label"
        app:layout_constraintBottom_toTopOf="@+id/usage_example_detail_label"/>

    <TextView
        android:id="@+id/usage_example_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_example"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation_detail"
        app:layout_constraintBottom_toTopOf="@+id/usage_example_detail"/>

    <TextView
        android:id="@+id/usage_example_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Placeholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usage_example_detail_label"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>